{
  "private": true,
  "name": "site",
  "version": "0.0.0",
  "description": "Documentation site for mobx-keystone",
  "license": "MIT",
  "scripts": {
    "start": "pnpm run llms:generate && pnpm run llms:sync-root && docusaurus start",
    "llms:generate": "pnpm run llms:generate:raw && pnpm run llms:generate:full",
    "llms:generate:raw": "get-llms-txt --content-dir ./docs --output-dir ./generated-static --base-url https://mobx-keystone.js.org --project-name mobx-keystone --project-description \"Documentation site for mobx-keystone\" && node --experimental-strip-types ./scripts/patch-llms-md.mts",
    "llms:generate:full": "node --experimental-strip-types ./scripts/generate-llms-full.mts",
    "llms:sync-root": "shx cp ../../llms.txt ./generated-static/llms.txt",
    "build": "pnpm run llms:generate && pnpm run llms:sync-root && docusaurus build",
    "serve": "docusaurus serve"
  },
  "dependencies": {
    "@docusaurus/core": "^3.9.2",
    "@docusaurus/preset-classic": "^3.9.2",
    "@easyops-cn/docusaurus-search-local": "^0.55.0",
    "@iframe-resizer/child": "^5.5.9",
    "@iframe-resizer/react": "^5.5.9",
    "bootstrap-icons": "^1.13.1",
    "bufferutil": "^4.1.0",
    "mobx-keystone": "workspace:*",
    "mobx-keystone-loro": "workspace:*",
    "mobx-keystone-yjs": "workspace:*",
    "mobx-react": "^9.2.1",
    "nanoid": "^3.3.11",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "remotedev": "^0.2.9",
    "utf-8-validate": "^6.0.6",
    "y-webrtc": "^10.3.0"
  },
  "peerDependencies": {
    "loro-crdt": "^1.10.3",
    "mobx": "^6.0.0",
    "yjs": "^13.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.29.0",
    "@docusaurus/module-type-aliases": "^3.9.2",
    "@docusaurus/tsconfig": "^3.9.2",
    "@docusaurus/types": "^3.9.2",
    "@svgr/webpack": "^8.1.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "fast-glob": "^3.3.3",
    "get-llms-txt": "^1.0.1",
    "raw-loader": "^4.0.2",
    "remark-mdx": "^3.1.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "shx": "^0.4.0",
    "typescript": "^5.9.3",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.1.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
