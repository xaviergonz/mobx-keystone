{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true, "defaultBranch": "master" },
  "files": {
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!packages/lib/coverage/**",
      "!packages/lib/api-docs/**",
      "!apps/site/.docusaurus/**",
      "!apps/site/build/**",
      "!apps/site/copy-to-build/**",
      "!apps/site/static/api/**",
      "!apps/site/docs/examples/**",
      "!**/.yarn/**",
      "!**/.pnp.*"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": { "useKeyWithClickEvents": "off" },
      "complexity": {
        "noBannedTypes": "off",
        "noExcessiveCognitiveComplexity": "off",
        "noForEach": "off",
        "noUselessThisAlias": "off",
        "noVoid": "off",
        "noArguments": "off"
      },
      "correctness": {
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "noReExportAll": "off",
        "noNamespaceImport": "off"
      },
      "security": {},
      "style": {
        "noDefaultExport": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "noParameterProperties": "off",
        "noUnusedTemplateLiteral": "off",
        "noUselessElse": "off",
        "useConsistentArrayType": "off",
        "useFilenamingConvention": "off",
        "useForOf": "off",
        "useImportType": "off",
        "useNamingConvention": "off",
        "useTemplate": "off",
        "useAsConstAssertion": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error",
        "useNumberNamespace": "error",
        "noInferrableTypes": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noAssignInExpressions": "off",
        "noConfusingVoidType": "off",
        "noConsole": "off",
        "noEmptyBlockStatements": "off",
        "noEmptyInterface": "off",
        "noExplicitAny": "off",
        "noMisplacedAssertion": "off",
        "noReactSpecificProps": "off"
      }
    },
    "includes": [
      "**/apps/site/src/**/*.ts",
      "**/apps/site/src/**/*.tsx",
      "**/apps/site/docs/**/*.ts",
      "**/apps/site/docs/**/*.tsx",
      "**/packages/lib/src/**/*.ts",
      "**/packages/lib/test/**/*.ts",
      "**/packages/mobx-keystone-yjs/src/**/*.ts",
      "**/packages/mobx-keystone-yjs/test/**/*.ts",
      "!**/packages/lib/src/action/modelFlowPromiseGenerator.ts"
    ]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "semicolons": "asNeeded"
    },
    "globals": [
      "afterEach",
      "beforeEach",
      "describe",
      "expect",
      "it",
      "jest",
      "test",
      "fail",
      "arguments",
      "ReadonlySetLike"
    ]
  }
}
